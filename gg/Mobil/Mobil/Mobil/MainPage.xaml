<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobil.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#093163" Padding="24" CornerRadius="0">
            <Label Text="Авторизуйтесь в MES системе!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="log" Placeholder="Логин" ></Entry>
        <Entry x:Name="pas" IsPassword="True" Placeholder="Пароль"></Entry>
        <Button x:Name="button1" Text="Войти" BackgroundColor="#2196F3" Clicked="Button_ClickedAsync"> </Button> 
        
    </StackLayout>

</ContentPage>
