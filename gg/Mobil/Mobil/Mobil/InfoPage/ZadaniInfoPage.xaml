<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobil.InfoPage.ZadaniInfoPage" Title="Подробная информация">
   
        
     <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label TextColor="Black" Text="Название задания:" FontSize="Medium"/>
            <Label TextColor="Black" FontSize="Medium" TextDecorations="Underline" Text="{Binding CurrentZadani.Название}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label TextColor="Black" Text="Описание задания:" FontSize="Medium"/>
            <Label TextColor="Black" FontSize="Medium" TextDecorations="Underline" Text="{Binding CurrentZadani.Описание}"/>
        </StackLayout>
        <Button Text="Отправить в работу" Clicked="Button_Clicked"></Button>
     </StackLayout>
       
    
</ContentPage>